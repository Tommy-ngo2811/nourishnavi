<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NourishNaviGit.FormPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image Source="logo.png">
                <Image.Clip>
                    <EllipseGeometry Center="165,110" RadiusX="90" RadiusY="90" />
                </Image.Clip>
            </Image>

            <Label
                Text="NourishNavi"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32" 
                FontFamily="Bold"
                TextColor="#131b1c"
                HorizontalOptions="Center" />   

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Executes prompt building code based on stored parameters"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            <CheckBox x:Name="entrySimple"/>
            <Entry x:Name="entryAge" Placeholder="How old are you?"/>
            <!--Radio buttons-->
            <Entry x:Name="entryGender" Placeholder="What gender are you?"/>
            <!--Radio buttons-->
            <Entry x:Name="entryActivity" Placeholder="How active are you?"/>
            <!--Checkboxes-->
            <Entry x:Name="entryMeals" Placeholder="What meals do you want to include?"/>
            <!--Check boxes-->
            <Entry x:Name="entryDiet" Placeholder="Do you have any dietary needs?"/>
            <Entry x:Name="entryAllergy" Placeholder="What are you allergic to?"/>
            <Entry x:Name="entryDislikes" Placeholder="Is there anything you don't want included?"/>
            <Entry x:Name="entryLikes" Placeholder="Is there anything you are craving?"/>

            <Label
                Text="Login Or Sign Up"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="NourishNavi, your AI Grocery Navigenius"
                FontSize="18"
                TextColor="#131b1c"
                HorizontalOptions="Center" />

            <Button
                x:Name="LoginBtn"
                Text="Login"
                BackgroundColor="DarkGoldenrod"
                SemanticProperties.Hint="Takes you to the login page"
                Clicked="OnLoginBtnClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="SignupBtn"
                Text="Sign-Up"
                BackgroundColor="DarkGoldenrod"
                SemanticProperties.Hint="Takes you to the sign up page "
                Clicked="OnSignupBtnClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
